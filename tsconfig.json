{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@admin/*": ["app/admin/*"],
      "@mobile/*": ["app/mobile*"]
    }
  }
}
